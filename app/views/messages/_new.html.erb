<% @messages.each do |message| %>

  <div class="message-main">
          <div class="message-subjects">
          質問
          </div>
          <div class="message-sub">
          <div class="message-main-two">
            <%= message.subject %>
          </div>
          </div>
          <div class="message-text">
          回答
          </div>
          <div class="message-show-three">
            <%= message.message %>
          </div><br>
<% end %>
  
<%= "追記" %>
<%= form_with(model: [@qa, @message], method: :post) do |f|%>

          <%= f.text_area :subject, placeholder:"例) 件名", size: "40x2"  %><br>
          <%= f.text_area :message, placeholder:"例) コメンツ", size: "40x20"  %><br>
          <%= f.submit '送信', class: 'form-submit' %>

<% end %>