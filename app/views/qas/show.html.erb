<%= render "devise/shared/header" %>

<div class="notices-main">
  <%= "Q&Aテスト" %>
    <% @qas.each do |qa| %>
      <div class="notices">
              <div class="notices-subjects">
              質問
              </div>
              <div class="notices-sub">
              <div class="notice-main-two">
                <%= qa.question %>
              </div>
              </div>
              <div class="notice-text">
              回答
              </div>
              <div class="notice-show-three">
                <%= qa.answer %>
              </div><br>
        <% end %>

          <<%= form_with(model: [@qa, @message], method: :post) do |f|%>
             <div class="field">
              <%= f.text_area :subject, placeholder:"例) 件名", size: "40x2"  %><br>
              <%= f.text_area :message, placeholder:"例) コメント", size: "40x20"  %><br>
              </div>
              <div class="actions">
              </div>
          <% end %>
    </div>
</div>

<%= render "devise/shared/footer" %>