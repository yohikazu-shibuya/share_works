<%= render "devise/shared/header" %>
 <div class="notice-main">
  <div class="notice-body">
            
      <%= render "devise/shared/side_menu" %>
            
            <div class="notices-new-main">
                  <div class="notice-main-word">
                    お知らせ入力画面
                  </div>
                      <%= form_with(model: @notice, local: true) do |f|%>

                      <%= f.collection_select(:genre_id, Genre.all, :id, :name, {},) %><br><br>

                      <%= f.text_area :subject, placeholder:"例) 件名", size: "40x2" %><br><br>

                      <%= f.text_area :notice, placeholder:"例) 内容", size: "80x20" %><br><br>
                      <%= f.submit "保存する", class: "button" %>
                      <% end %>
            </div>
    </div>
 </div>
<%= render "devise/shared/footer" %>