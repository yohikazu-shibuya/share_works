<%= render "devise/shared/header" %>

<div class="notices-main">
  <%= "Q&Aテスト" %>
  <%= link_to "QA一覧へ", qas_path, class: "post" %>
    <% @qas.each do |qa| %>
      <div class="notices">
              <div class="notices-subjects">
              お問い合わせ
              </div>
              <div class="notices-sub">
              <div class="notice-main-two">
                <%= qa.question %>
              </div>
              </div>
              <div class="notice-text">
              回答
              </div>
              <div class="notice-show-three">
                <%= qa.answer %>
              </div><br><br>
        <% end %>

      <%= render "messages/show" %>
  <%= render "devise/shared/footer" %>
  </div>
</div>